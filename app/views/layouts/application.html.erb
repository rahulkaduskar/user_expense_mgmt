<!DOCTYPE html>
<html>
<head>
  <title>UsersExpenceMgmt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <%= csrf_meta_tags %>
</head>
<body>

  <%= content_tag(:div, flash[:error], :class => "alert alert-danger") if flash[:error] %>
  <%= content_tag(:div, flash[:notice], :class => "alert alert-success") if flash[:notice] %>
  <%= content_tag(:div, flash[:alert], :class => "alert alert-danger") if flash[:alert] %>

<section>
	<div class="heading"> 
		<h2>Expense Manager</h2>
	</div>
	<div class="top-links-container">
		<%= link_to 'Users', users_path %> |  <%= link_to 'Events', new_event_path %> |  
		<%= link_to 'Payments', payments_path %>
	</div>
</secton>

<div class="container">
  
	<%= yield %>
</div>

</body>
</html>
