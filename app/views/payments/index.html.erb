<h1>Payments:</h1>

<div>
  <div style="margin: 10px 0px;">
    <% if @payments.present? %>
      <table class="table table-inverse">
        <thead>
          <tr>
            <th>User</th>
            <th>Amount</th>
            <th>Paid to</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
       
          <% @payments.each do | payment | %>
            <tr>
              <td> <%= payment.user.name %></td>
              <td> <%= payment.amount %></td>
              <td> <%= payment.object_type %>: <%= payment.object.name %></td>
              <td><%= link_to 'Show', payment %></td>
              <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
              <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div> <h3>No user available</h3></div>
    <% end %>
  </div>
  <div class="clear"><%= link_to 'New Payment', new_payment_path %> </div>
</div>
