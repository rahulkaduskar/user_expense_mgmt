<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="fields">
    <div class="margin-botton-small">
      <label> Name </label> <%= f.text_field :name %>
    </div>
    <div class="margin-botton-small">
      <label> Email </label> <%= f.text_field :email %>
    </div>  
  </div>
  <div class="actions">

    <%= f.submit %>
  </div>
<% end %>
