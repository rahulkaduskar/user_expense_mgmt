<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="fields">
    <div class="margin-botton-small">
      <label> Name </label> <%= f.text_field :name %>
    </div>
    <div class="margin-botton-small">
      <label> Amount </label> <%= f.text_field :amount %>
    </div>  
    <div class="fields">
      <%= f.fields_for :payments do |payment| %>
        <div class="margin-botton-small">
          <label> User name </label> <%= payment.select :user_id, User.all.collect{|u| [ u.name, u.id ] } , :prompt => 'Select' %> 
        </div>
        <div class="margin-botton-small">
          <label> Amount </label> <%= payment.text_field :amount %>
        </div> 
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
